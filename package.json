{
  "name": "essenmelia",
  "version": "0.1.0",
  "private": false,
  "main": "electron-main.cjs",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:3000 electron .",
    "dev": "concurrently \"npm:dev:renderer\" \"wait-on http://localhost:3000 && npm:dev:electron\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder --publish never",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.essenmelia.app",
    "productName": "Essenmelia",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Essenmelia"
    }
  }
}
